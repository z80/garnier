<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".Activity01" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp"
        android:contentDescription="@string/background"
        android:src="@drawable/slide_05" />

    <Button
        android:id="@+id/imageButton1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_marginLeft="125dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="25 years option"
        android:onClick="onClick25"
        android:src="@drawable/button_01_25"
        style="@style/ButtonFont"
        android:text="25+"
        android:background="@drawable/custom_button" />

    <Button
        android:id="@+id/imageButton2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_marginLeft="425dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="35 years option"
        android:onClick="onClick35"
        android:src="@drawable/button_01_35"
        style="@style/ButtonFont"
        android:text="35+"
        android:background="@drawable/custom_button" />
    
    <Button
        android:id="@+id/imageButton3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_marginRight="425dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="45 years option"
        android:onClick="onClick45"
        android:src="@drawable/button_01_45"
        style="@style/ButtonFont"
        android:text="45+"
        android:background="@drawable/custom_button" />

    <Button
        android:id="@+id/imageButton4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="55 years option"
        android:onClick="onClick55"
        android:src="@drawable/button_01_55"
        style="@style/ButtonFont"
        android:text="55+"
        android:background="@drawable/custom_button" />
    
</RelativeLayout>


